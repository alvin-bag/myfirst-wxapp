/* pages/list/list.wxss */
@import "../../weui-miniprogram/loading/loading.wxss";
page {
  background-color: #e6e6e6;
}

.search {
  position: relative;
}

.search input {
  width: 90%;
  margin: 15rpx auto;
  border-radius: 30px;
  background-color: #fff;
}

.search icon {
  position: absolute;
  top: 0;
  right: 20px;
}

.list {
  display: flex;
  background-color: #fff;
  border-radius: 15px;
  padding: 10rpx;
  margin-bottom: 10px;
}

.list .img {
  margin: 5px 10px 0px 5px;
  width: 20%;
}

.list .img image {
  border-radius: 10px;
  width: 150rpx;
  height: 150rpx;
}

.info {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
 
}

.info .name {
  font-weight: bold;
}
.info text{
  width: 100%;
   overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.info .address, .phone {
  font-size: 13px;
  color: #333;
}

.info .time {
  font-size: 13px;
  color: #444;
}

.commentcount {
  width: 5%;
  position: relative;
}

.commentcount .count {
  text-align: center;
  border-radius: 30px;
  width: 60rpx;
  height: 40rpx;
  background-color: red;
  position: absolute;
  top: 0;
  right: 0;
}

